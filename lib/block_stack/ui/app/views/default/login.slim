sass:
  .login
    width: 100%
    margin-top: 10%
    .wrapper
      border-radius: 5px
      .title
        text-align: center
        color: white
        font-size: 35px
        font-weight: bold
        width: 100%
        border-radius: none
        border: none
        &:hover
          background-color: rgba(#f1f1f1, 1)
        a
          text-decoration: none
          color: grey
          &.active
            background-color: #028be3
            color: white
      background-color: white
      box-shadow: 2px 4px 6px grey
      margin: auto
      display: table
      form.signin
        padding: 50px
        label
          font-weight: bold
          padding-right: 10px
          width: 100px
          text-align: right
        i.fa
          font-size: 25px
        input.signin
          transition: all 0.5s ease
          border: 1px solid #b9b9b9
          padding: 5px 10px
          font-size: 15px
          border-radius: 3px
          font-size: 18px
          height: 40px
          width: 300px
          &:focus
            border: 1px solid #2e9ce2
            box-shadow: 0 0 8px #2e9ce2
            outline: none
        .btn.login
          width: auto
          margin: auto
          display: table
      #register
        padding: 50px
        .dformed-form
          box-shadow: none
          .dformed-form-field
            border-bottom: none

.login
  .wrapper.tab-content
    ul.nav.nav-tabs role='tablist'
      li.nav-item.title
        a.nav-link.active data-toggle='tab' href='#sign-in' role='tab' Sign In
      - if config.allow_registration
        li.nav-item.title
          a.nav-link data-toggle='tab' href='#register' role='tab' Register
    .tab-pane.active#sign-in role='tabpanel'
      form.signin action='/session/login' method='post'
        i.fa.fa-user-circle
        label Username
        input.signin name='user' placeholder='Username' type='text'
        br
        br
        i.fa.fa-key
        label Password
        input.signin name='password' placeholder='Password' type='password'
        br
        br
        input.btn.btn-outline-primary.btn-lg.login type='submit' value='Log In'
    - if config.allow_registration
      .tab-pane#register role='tabpanel'
        == render_block :form, model: config.login_model, save_to: '/session/register', save_redirect: '/login'
