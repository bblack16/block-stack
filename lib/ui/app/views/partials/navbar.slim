sass:
  #menu
    color: white
    background-color: #3a3939
    overflow: hidden
    box-shadow: 4px 0px 4px #292b2c
    z-index: 99
    position: fixed
    top: 0
    bottom: 0
    left: 0
    width: 275px
    height: 100%
  .navbar-brand
    width: 100%
  ul.menu-list
    list-style-type: none
    width: 100%
    padding: 0px
    li
      width: 100%
      &:hover
        background-color: #3c88d2
    li.active
      background-color: #2c669e
    a.parent
      text-decoration: none !important
      color: white
      &:hover
        padding-left: 30px
  #menu.hide
    left: -275px
    background-color: #000000
    box-shadow: none
  #menu-toggle
    font-size: 25px
    position: fixed
    z-index: 100
    color: white
    top: 17px
    left: 5px
    cursor: pointer
    &:hover
      color: #e2e1e1
  #menu-toggle.dark
    color: #3a3939
    font-size: 30px
    -webkit-transform: rotate(360deg)
    -moz-transform: rotate(360deg)
    -o-transform: rotate(360deg)
    -ms-transform: rotate(360deg)
    transform: rotate(360deg)
  .dropdown-menu
    position: relative
    width: 100%
    border-radius: 0px
    border: none
    background-color: #efefef
    float: none
  .dropdown-item
    color: black
    &:hover
      background-color: rgba(#3c88d2, 0.52)
      padding-left: 30px

- menu = request[:menu]

#menu-toggle.fa.fa-bars.transition-all-1

nav#menu.transition-all-1
  header
    h2.navbar-brand.text-center = menu[:title]
    ul.menu-list
      - menu[:main_menu].each do |name, attributes|
        - sub = attributes[:sub]
        - active = attributes[:active_when]&.any? { |exp| exp.is_a?(Regexp) ? exp =~ request.path_info : exp.to_s == request.path_info }
        li.transition-all-1 class="nav-item#{sub ? ' dropdown' : nil}#{active ? ' active' : nil}"
          a.transition-all-1-5.parent id="menu_#{name}" class="nav-link#{sub ? ' dropdown-toggle' : nil}" *attributes.except(:text, :sub, :active_when) data-toggle="#{sub ? 'dropdown' : 'toggle'}" aria-haspopup="true" aria-expanded="false"
            = attributes[:text] || name
          - if attributes[:sub]
            .dropdown-menu aria-labelledby="menu_#{name}"
              - attributes[:sub].each do |sub_name, sub_attributes|
                a.transition-all-1.dropdown-item *sub_attributes.except(:text)
                  = sub_attributes[:text] || sub_name
    == slim :'partials/footer'
