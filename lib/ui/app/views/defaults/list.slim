sass:
  .list-item
    box-shadow: 0px 0px 3px grey
    background-color: #f6f6f6
    position: relative
    &:hover
      background-color: rgba(#c4c4c4, 0.25)
      box-shadow: 2px 2px 5px grey
    td.image
      background-color: #676767
      width: 100px
      min-width: 100px
      text-align: center
      i.fa
        color: white
        font-size: 40px
      img
        height: 100%
        max-width: 100px
        max-height: 50px
      .missing-image
        width: 100px
        height: 50px
        background: none
        border: none
    td.id
      background-color: #676767
      font-size: 30px
      font-weight: bold
      width: 80px
      padding: 0px 10px
    td.title
      font-size: 20px
      margin: 8px
      width: 100%
      div.description
        color: #8c8c8c
        font-size: 15px
    td.type
      background-color: #676767
      color: white
      font-size: 18px
      font-weight: bold
      text-align: center
      width: 40px
      min-width: 40px
      padding: 0px 10px
    td.actions
      background-color: #676767
      font-size: 40px
      &::before
        display: none
      &::after
        display: none


.list-item.transition-all-0-5
  table
    tr
      td.image
        - if src = @item.image_for(:thumbnail)
          == src
        - else
          .missing-image.float-left
            i.fa.fa-picture-o

      td.id
        == link_to(:show, @item, @item.id, class: 'btn btn-secondary')
      td.title
        = name_for(@item)
        .description
          == @item.attribute(@item.setting(:description_attribute))
      td.actions
        == slim :'defaults/widgets/action_dropdown'
      td.type
        = @item.class.clean_name
