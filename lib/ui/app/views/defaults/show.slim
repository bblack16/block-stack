sass:
  aside.right-content
    float: left
    margin: 15px
  .info
    .basics
      padding-right: 35px
      max-width: 70%
      table
        margin: auto
        &.details
          margin: auto
        td
          padding: 5px
          &.label
            font-weight: bold
            text-align: right
          &.description
            vertical-align: top
  .thumbnail-image
    width: 100%
    height: 300px
    text-align: center
    .gallery
      width: 100%
      height: 100%
    img
      max-width: 100%
      max-height: 100%
  .tagline
    color: #959595
    font-size: 115%
    text-align: center
  .details
    &.middle-align
      margin: auto
      padding: 25px
      width: auto
    &.float-right
      width: 400px
      margin-right: 25px


== slim :'defaults/header'
- tag = @model.setting_call(:tagline)
- img = @model.image_for(:thumbnail, class: 'height-3 baguette-image')
- desc = @model.setting_call(:description)
.centered.info
  br

  .tagline
    == tag

  .float-left.basics
    .description
      == desc
  aside.right-content
    .image.thumbnail-image == img
    .details == slim :'defaults/widgets/details'
